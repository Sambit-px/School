<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Nearby Schools</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <div class="container mt-4">
        <h1 class="mb-4">Search Schools Near a Location</h1>
        <form action="/school/search" method="GET" class="mb-4">
            <div class="mb-3">
                <input type="text" class="form-control" name="location" placeholder="Enter a location (e.g., Kolkata)"
                    required>
            </div>
            <button type="submit" class="btn btn-success">Search</button>
        </form>

        <h2>Schools Sorted by Distance</h2>
        <table class="table table-bordered table-hover mt-3">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                </tr>
            </thead>
            <tbody>
                <% for(school of schools) { %>
                    <tr>
                        <td>
                            <%= school.id %>
                        </td>
                        <td>
                            <%= school.name %>
                        </td>
                        <td>
                            <%= school.address %>
                        </td>
                        <td>
                            <%= school.latitude %>
                        </td>
                        <td>
                            <%= school.longitude %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>

        <a href="/addSchool" class="btn btn-primary mt-3">Add Another School</a>
    </div>
</body>

</html>